rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Fonction helper pour vérifier le rôle admin (Custom Claim)
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Fonction pour vérifier si connecté
    function isAuth() {
      return request.auth != null;
    }

    // Règle pour la collection 'users'
    match /users/{userId} {
      allow read: if isAuth();
      allow write: if isAuth() && request.auth.uid == userId;
    }

    // Règle pour la collection 'places'
    match /places/{placeId} {
      // Tout le monde peut lire les lieux
      allow read: if true;
      
      // Création autorisée pour tout utilisateur connecté (pour Add Place & Seeder)
      allow create: if isAuth();
      
      // Modification/Suppression : Admin ou Créateur
      allow update, delete: if isAdmin() || (isAuth() && resource.data.createdBy == request.auth.uid);
    }
  }
}
